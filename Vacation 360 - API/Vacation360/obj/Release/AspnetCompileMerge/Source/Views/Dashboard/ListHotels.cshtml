

@{
    ViewBag.Title = "ListHotels";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}
@using Vacation360.Models.Orm;
@model IEnumerable<vaHotel>
<h1 class="page-header">Hotel List</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(x => x.Name)</th>
            <th>@Html.DisplayNameFor(x => x.Email)</th>
            <th>@Html.DisplayNameFor(x => x.City)</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td style="width:200px;">
                    <img style="width:100%;" src="@item.Photos[0].RawUrl" />
                </td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.City.Name</td>
                <th class="text-right">
                    <a href="/Dashboard/Edit/@item.ID" class="btn btn-circle btn-info btn-lg">
                        <i class="fa fa-edit"></i>
                    </a>
                   <!-- <a href="/Admin/Delete/@item.ID" class="btn btn-danger btn-circle btn-lg sil">
                        <i class="fa fa-remove"></i>
                    </a> -->
                </th>
            </tr>
        }
    </tbody>
</table>

